<!DOCTYPE html>
<html>
<head><% include partials/head %></head>
<body>
    <header><% include partials/header %></header>
    <div id="tool-body">
        <div class="row">
            <div class="container-large">
                <div class="col col-10 center">
                    <h1>Wire Framing Tool</h1>
                </div>
            </div>
        </div>
        <div class="row tools">
            <div class="container-full tools">
                <div class="col col-2 leftTools">
                    <button type="button" onClick="showForm()" id="collab">Collaborate</button>
                    <div id="inviteForm">
                        <form method="post" action="/sendInvite">
                            <p>Invite team member:</p>
                            <input type="text" name="email" id="emailEntry" onInput="checkEmail()">
                            <input id="sendEmail" type="submit" onClick="invite()" value="Send Invite" disabled>
                        </form>
                    </div>
                    <button type="button" disabled>Save</button>
                    <button type="button" disabled>History</button>
                </div>
                <div class="col col-8 editTools">
                    <div>
                        <p>Title: &nbsp;</p><input id="titleBox" value='Untitled' onInput="changeTitle()"/>
                    </div>
                    <div>
                        <p>Background Color: &nbsp;</p><input id="backColor" class="jscolor" value="#FFFFFF" onChange="updateBack(this.value)">
                    </div>
                    <div>
                        <p>Text Color: &nbsp;</p><input id="textColor" class="jscolor" value="#000000" onChange="updateText(this.value)">
                    </div>
                    <div>
                        <p>Font: &nbsp;</p><select id="fontBox" onChange="setFont()">
                            <option>Abril Fatface</option>
                            <option selected>Alegreya Sans SC</option>
                            <option>Audiowide</option>
                            <option>Barlow Condensed</option>
                            <option>Comfortaa</option>
                            <option>Lato</option>
                            <option>Lobster</option>
                            <option>Open Sans</option>
                            <option>PT Sans</option>
                            <option>Special Elite</option>
                            <option>Titillium Web</option>
                        </select>
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="container-full">
                <div class="col col-10" id="interact"></div>
            </div>
        </div>
        <div class="row">
            <div class="container-full">
                <div class="col col-10" id="card">
                    <h1 id="cardTitle" class="center">Untitled</h1>
                </div>
            </div>
        </div>
    </div>
    <footer><% include partials/footer %></footer>
    <script src="jscolor.js"></script>
    <script src="/socket.io/socket.io.js"></script>
    <script src="functionality.js"></script>
</body>
</html>
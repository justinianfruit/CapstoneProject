<!DOCTYPE html>
<html>
<head><% include partials/head %></head>
<body>
    <header><% include partials/header %></header>
    <div class="row">
        <div class="container-large">
            <div class="col col-10 center">
                <h1>Profile</h1>
            </div>
        </div>
    </div>
    <div class="row center">
        <div class="container-large center">
            <div class="col col-10 center" id="profileInfo">
                <img id="pic" src="<%= user.imageURL %>" alt=""><h2 id="profileName">Welcome, <%= user.name %>!</h2>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="container-large">
            <div class="col col-10">
                <div>
                    <h3 class="profileHeading">Projects</h3>
                </div>
                <div>
                    <% if (collection.length > 0) { %>
                        <table class="striped">
                            <tr>
                                <th>Project Title</th>
                                <th>Last Updated</th>
                                <th>Creation Date</th>
                            </tr>
                            <% collection.forEach(function (project) { %>
                                <tr>
                                    <td><a class="profileLink" href="/buildtool?id=<%= project.id %>"><%= project.title %></a></td>
                                    <td><%= project.updated %></td>
                                    <td><%= project.created %></td>
                                </tr>
                            <% }) %>
                        </table>
                    <% } else { %>
                        <h2 class="center">You haven't made any projects!</h2>
                    <% } %>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="container-large">
            <div class="col col-10">
                <div>
                    <h3 class="profileHeading">Uploaded Files</h3>
                </div>
                <div>
                    <table class="striped">
                        <tr>
                            <th>File Name</th>
                            <th>Date Uploaded</th>
                            <th>Type</th>
                            <th>Size</th>
                        </tr>
                        <tr>
                            <td>beans.png</td>
                            <td>8/21/17, 12:56 PM</td>
                            <td>PNG</td>
                            <td>272 KB</td>
                        </tr>
                        <tr>
                            <td>frop7.jpg</td>
                            <td>8/13/17, 8:40 AM</td>
                            <td>JPG</td>
                            <td>191 KB</td>
                        </tr>
                        <tr>
                            <td>summer2017.png</td>
                            <td>9/7/17, 3:51 PM</td>
                            <td>PNG</td>
                            <td>34 KB</td>
                        </tr>
                    </table>
                </div>
                <div>
                    <Link to="/buildtool" class="btn-floating btn-large red"></Link>
                </div>
            </div>
        </div>
    </div>
    <footer><% include partials/footer %></footer>
    <script type="text/javascript">
        var projects = '<%- collection %>';
    </script>
    <script src="navScript.js"></script>
</body>
</html>
<!DOCTYPE html>
<html>
<head><% include partials/head %></head>
<body>
    <header><% include partials/header %></header>
    <div id="tool-body">
        <div class="row">
            <div class="container-large">
                <div class="col col-10 center">
                    <h1>Wire Framing Tool</h1>
                </div>
            </div>
        </div>
        <div class="row tools">
            <div class="container-full tools">
                <div class="col col-1 leftTools">
                    <button type="button" onClick="showForm()" id="collab">Invite</button>
                    <div id="inviteForm">
                        <form method="post" action="/sendInvite?id=<%= project %>">
                            <p>Invite team member:</p>
                            <input type="text" name="email" id="emailEntry" onInput="checkEmail()">
                            <input id="sendEmail" type="submit" onClick="invite()" value="Send Invite" disabled>
                        </form>
                    </div>
                    <button type="button" disabled>Save</button>
                </div>
                <div class="col col-8 editTools">
                    <div>
                        <p>Title: &nbsp;</p><input id="titleBox" value='Untitled' onInput="changeTitle()" onBlur=""/>
                    </div>
                    <div>
                        <p>Background Color: &nbsp;</p><input id="backColor" class="jscolor" value="#FFFFFF" onChange="updateBack(this.value)">
                    </div>
                    <div>
                        <p>Title Color: &nbsp;</p><input id="textColor" class="jscolor" value="#000000" onChange="updateText(this.value)">
                    </div>
                    <div>
                        <p>Font: &nbsp;</p><select id="fontBox" onChange="setFont()">
                            <option>Abril Fatface</option>
                            <option selected>Alegreya Sans SC</option>
                            <option>Audiowide</option>
                            <option>Barlow Condensed</option>
                            <option>Comfortaa</option>
                            <option>Lato</option>
                            <option>Lobster</option>
                            <option>Open Sans</option>
                            <option>PT Sans</option>
                            <option>Special Elite</option>
                            <option>Titillium Web</option>
                        </select>
                    </div>
                </div>
                <div class="col col-1 rightTools">
                    <button id="histBtn" type="button" onClick="showHistory()">History</button>
                    <div id="historyWindow">
                        <div id="historyCont">
                            <ul id="histlog"></ul>
                        </div>
                    </div>
                    <button id="chatBtn" type="button" onClick="showChat()">Chat</button>
                    <div id="chatWindow">
                        <div id="message-container">
                            <ul id="chatlog"></ul>
                        </div>
                        <div id="messageEntry">
                            <input type="text" id="message" onkeydown="enterMsg()" maxlength="300" autofocus><button id="sendMsg" type="button" name="button" onclick="sendMessage()">Send</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="container-full">
                <div class="col col-10" id="interact">
                    <div class="imageTool" onClick="addText()"><img src="images/textIcon.png"></div>
                    <div class="imageTool" onClick="addShape('dotLine')"><img id="dot" src="images/dotLine.png"></div>
                    <div class="imageTool" onClick="addShape('ellipse')"><img src="images/ellipse.png"></div>
                    <div class="imageTool" onClick="addShape('hexagon')"><img src="images/hexagon.png"></div>
                    <div class="imageTool" onClick="addShape('line')"><img id="line" src="images/line.png"></div>
                    <div class="imageTool" onClick="addShape('pentagon')"><img src="images/pentagon.png"></div>
                    <div class="imageTool" onClick="addShape('rect')"><img src="images/rect.png"></div>
                    <div class="imageTool" onClick="addShape('roundRect')"><img src="images/roundRect.png"></div>
                    <div class="imageTool" onClick="addShape('triangle')"><img src="images/triangle.png"></div>
                    <div class="imageTool" id="buttonDiv"><button id="delete" type="button" disabled>Delete</button></div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="container-full">
                <div class="col col-10 center" id="card">
                    <h1 id="cardTitle" class="center">Untitled</h1>
                    <div id="project" height='735px' width='1600px'></div>
                </div>
            </div>
        </div>
    </div>
    <footer><% include partials/footer %></footer>
    <script src="navScript.js"></script>
    <script src="jscolor.js"></script>
    <script src="interact.js"></script>
    <script src="/socket.io/socket.io.js"></script>
    <script type="text/javascript">
        var userId = "<%- userID %>";
        var username = '<%- username %>';
        var project = "<%- project %>";
    </script>
    <script src="functionality.js"></script>
</body>
</html>